<!-- database.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Database Table</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #4caf50;
      color: white;
    }
  </style>
</head>
<body>

  <h2>Data from Database</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(entry => { %>
        <tr>
          <td><%= entry.name %></td>
          <td><%= entry.phNo %></td>
          <td><%= entry.address %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>
